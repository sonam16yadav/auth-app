{
  "compilerOptions": {
    "target": "ES2022",              // Upgrade to modern ES for Drizzle compatibility
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",      // Needed for node_modules resolution
    "skipLibCheck": true,            // Avoid deep type errors in node_modules
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
